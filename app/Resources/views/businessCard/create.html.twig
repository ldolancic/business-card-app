{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <h3>Create a business card</h3>

        <br>

        <div class="row">
            <div class="col-sm-6">

                {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_label(form.firstName) }}
                        {{ form_errors(form.firstName) }}
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.lastName) }}
                        {{ form_errors(form.lastName) }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.company) }}
                        {{ form_errors(form.company) }}
                        {{ form_widget(form.company, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.position) }}
                        {{ form_errors(form.position) }}
                        {{ form_widget(form.position, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.phone) }}
                        {{ form_errors(form.phone) }}
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.baseColor) }}
                        {{ form_errors(form.baseColor) }}
                        {{ form_widget(form.baseColor, {'attr': {'class': 'form-control'} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.picture) }}
                        {{ form_errors(form.picture) }}
                        {{ form_widget(form.picture, {'attr': {'class': ''} }) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(form.submitBtn) }}
                        {{ form_widget(form.submitBtn, {'attr': {'class': 'btn btn-default'} }) }}
                    </div>
                {{ form_end(form) }}

            </div>
        </div>

    </div>
{% endblock %}